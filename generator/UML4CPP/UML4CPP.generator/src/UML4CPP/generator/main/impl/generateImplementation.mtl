 * 
 * module to trigger implementation files generation of classes
 * 
 * Following files will be generated:
 * - singleton source file for classes with active singleton annotation
 * - implementation header file
 * - implementation source file
 * 
 */]
[module generateImplementation('http://www.eclipse.org/uml2/5.0.0/UML')]

[import UML4CPP::generator::main::impl::generateImplModelSource /]
[import UML4CPP::generator::main::impl::generateImplementationHeader /]
[import UML4CPP::generator::main::impl::generateImplementationSource /]
[import UML4CPP::generator::main::helpers::generalHelper /]

[template public generateImplementation(aClass : Class)]
[aClass.generateImplementationHeader()/]
[aClass.generateImplementationSource()/]
[if (aClass.isSingleton())]
[aClass.generateClassCpp()/]
[/if]
[/template]
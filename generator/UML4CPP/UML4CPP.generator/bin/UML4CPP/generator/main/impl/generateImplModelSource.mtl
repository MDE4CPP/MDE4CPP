[module generateImplModelSource('http://www.eclipse.org/uml2/5.0.0/UML')]

[import UML4CPP::generator::main::helpers::singletonHelper /]
[import UML4CPP::generator::main::helpers::generalHelper /]
[import UML4CPP::generator::main::helpers::nameHelper /]

[template public generateClassCpp(aClass : Class)  {className : String = aClass.name.toUpperFirst(); }]
[file  (aClass._package.getPackageName().concat('/').concat(className).concat('.cpp'), false, 'UTF-8')]

#include "[aClass._package.getPackageName()/]/[className/].hpp"
#include "[aClass._package.getPackageName()/]/impl/[className.concat('Impl')/].hpp"

[if (not aClass._package.ignoreNamespace())]using namespace [aClass._package.name/];[/if]

//static initialisation
[generateSingletonImpl(className, false)/]
[/file]
[/template]